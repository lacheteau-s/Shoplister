<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:components="clr-namespace:Shoplister.Views.Components"
             xmlns:constants="clr-namespace:Shoplister.Constants"
             xmlns:converters="clr-namespace:Shoplister.Converters"
             x:Class="Shoplister.Views.CatalogPage"
             Shell.NavBarIsVisible="False"
             Title="Catalog">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding LoadItemsCommand}" />
    </ContentPage.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56" />
            <RowDefinition>
                <RowDefinition.Height>
                    <Binding Path="HasSearchQuery">
                        <Binding.Converter>
                            <converters:BoolToValueConverter x:TypeArguments="x:Int32"
                                                             TrueValue="50"
                                                             FalseValue="0" />
                        </Binding.Converter>
                    </Binding>
                </RowDefinition.Height>
            </RowDefinition>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <components:CatalogHeaderView Grid.Row="0"
                                      BindingContext="{Binding}" />

        <Grid Grid.Row="1"
              ColumnDefinitions="*,50"
              Padding="10,0"
              BackgroundColor="{x:DynamicResource Secondary}"
              IsVisible="{Binding HasSearchQuery}">
            
            <Label Grid.Column="0"
                   Text="{Binding SearchQuery, Mode=OneWay}"
                   TextColor="{x:DynamicResource Tertiary}"
                   VerticalOptions="Center"
                   HorizontalOptions="Start" />
            
            <Button Grid.Column="1"
                    BackgroundColor="Transparent"
                    Command="{Binding AddNewItemCommand}">
                <Button.ImageSource>
                    <FontImageSource FontFamily="mdi-fonts"
                                     Glyph="{x:Static constants:MDIFonts.PlusCircle}"
                                     Size="24"
                                     Color="{x:DynamicResource Primary}" />
                </Button.ImageSource>
            </Button>
        </Grid>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Items}"
                        ItemSizingStrategy="MeasureFirstItem">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <components:CatalogItemView />
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>
    
</ContentPage>